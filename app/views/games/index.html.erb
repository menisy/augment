<h1>Listing games</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Company</th>
    <th>Type</th>
    <th>Esrb</th>
    <th>Release date</th>
    <th>Platforms</th>
    <th>Rating</th>
    <th>Description</th>
    <th>Image url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.title %></td>
    <td><%= game.company %></td>
    <td><%= game.type %></td>
    <td><%= game.esrb %></td>
    <td><%= game.release_date %></td>
    <td><%= game.platforms %></td>
    <td><%= game.rating %></td>
    <td><%= game.description %></td>
    <td><%= image_tag game.image_url, class:"thumb" %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

